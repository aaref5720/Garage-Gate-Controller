<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="48dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Garage"
            android:textSize="32sp"
            android:textColor="#070000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/connectionStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP Status: Connecting..."
            android:textSize="16sp"
            android:textColor="#000000"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Garage Status Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#1A1A1A"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠"
                android:textSize="48sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage Gate Controller"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/closeGarageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#DC2626"
            android:text="🔒 Close Garage"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        <Button
            android:id="@+id/openGarageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#10B981"
            android:text="🚪 Open Garage"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created By : Abdelrahman Mohamed"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginTop="16dp" />

</LinearLayout>